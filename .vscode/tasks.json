{
	"version": "2.0.0",
	"linux": {
		"command": "sh",
		"args": [
			"-c"
		]
	},
	"osx": {
		"command": "sh",
		"args": [
			"-c"
		]
	},
	"windows": {
		"command": "cmd",
		"args": [
			"/C"
		]
	},
	"tasks": [
		{
			"label": "Dotnet Restore",
			"command": "dotnet restore",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			// "args": [ "dotnet restore" ]
		},
		{
			"label": "Dotnet Restore Force",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "dotnet restore",
			"args": [
				"--no-cache"
			]
		},
		{
			"label": "Web App: Dotnet Build Debug",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "dotnet build ${workspaceRoot}/src/OrchardCore.Cms.Web -c Debug",
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Web App: Dotnet Rebuild Debug",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": "build",
			"command": "dotnet build",
			"args": [
				"${workspaceRoot}/src/OrchardCore.Cms.Web --no-incremental -c Debug"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Web App: Dotnet Build Release",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": "build",
			"command": "dotnet build",
			"args": [
				"${workspaceRoot}/src/OrchardCore.Cms.Web -c Release"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Web App: Dotnet Run",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "cd",
			"args": [
				"${workspaceRoot}/src/OrchardCore.Cms.Web & dotnet run"
			]
		},
		{
			"label": "Web App: Dotnet Publish",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "dotnet publish",
			"args": [
				"${workspaceRoot}/src/OrchardCore.Cms.Web --output ../publish"
			]
		},
		{
			"label": "Gulp Build",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "gulp",
			"args": [
				"build"
			],
			"problemMatcher": "$gulp-tsc"
		}
	]
}